<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">{{character.name}}'s profile</div>
        <div class="panel-body">
            
            <table class="table table-condensed">
                <tr>
                    <td>hit points:</td> 
                    <td>{{character.hp}}</td> 
                </tr> 
                <tr>
                    <td>intelligence:</td> 
                    <td>{{character.intel}}</td> 
                </tr> 
                <tr>
                    <td>luck:</td> 
                    <td>{{character.luck}}</td> 
                </tr> 
            </table>
        </div>
    </div>
</div>
<div class="col-md-3">
    <div class="panel panel-default">
        <div class="panel-heading">Assign Tasks</div>
        <div class="panel-body">            
            <select class="form-control" ng-model="player_task" ng-init="player_task='Hunt'" ng-change="set_task()">
                <option ng-repeat="job in jobs">{{job.jobName}}</option> 
            </select>
            <div ng-repeat="task in task" ng-show="task">
                {{task.name}} 
            </div>

        </div>
    </div>
</div>
